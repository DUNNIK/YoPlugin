<idea-plugin>
  <id>dunnik</id>
  <name>YoPlugin</name>
  <version>1.0</version>
  <idea-version since-build="193"/>
  <vendor email="dns.56@mail.ru" url="https://github.com/DUNNIK">DUNNIK</vendor>

  <description><![CDATA[
      Yo! This plugin is created to diversify your shitcode with your any pictures.
      <img src="https://github.com/qeesung/HighlightBracketPair/raw/master/images/highlight-java.gif"/><br/>
      <img src="https://github.com/qeesung/HighlightBracketPair/raw/master/images/highlight-go.gif"/><br/>
      <img src="https://github.com/qeesung/HighlightBracketPair/raw/master/images/settings.jpeg"/><br/>
      Click <a href="https://github.com/DUNNIK/YoPlugin">github</a> for more information.
    ]]></description>

  <change-notes><![CDATA[
      <ul>
        <li>Fixed some little issues</li>
        <li>Support more languages and IDEs</li>
        <li>Add color schemes and effects settings</li>
        <li>Compatible with the vim mode</li>
      </ul>
    ]]>
  </change-notes>

  <depends>com.intellij.modules.platform</depends>

  <extensions defaultExtensionNs="com.intellij">
    <applicationConfigurable parentId="tools" instance="settings.YoSettingsConfigurable"
                             id="org.intellij.sdk.settings.YoSettingsConfigurable"
                             displayName="YoPlugin Settings"/>
    <applicationService serviceImplementation="settings.YoSettingsState"/>
    <applicationService serviceImplementation="logic.YoProgressBarUiState"/>
  </extensions>

  <actions>

  </actions>

  <applicationListeners>
    <listener class="logic.ProgressBarLafManagerListener"
              topic="com.intellij.ide.ui.LafManagerListener" />
  </applicationListeners>
</idea-plugin>